<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margen"
    android:padding="@dimen/margen"
    app:cardCornerRadius="@dimen/margen"
    app:cardElevation="@dimen/margen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTituloGrupo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="50sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNumPersonasGrupo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/baseline_person_24" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvPagoUsuarioGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#36C60E"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvTotalGrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_total"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>