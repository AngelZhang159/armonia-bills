<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GrupoFragment"
    android:padding="@dimen/margen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTituloGrupoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:layout_weight="1"
                android:textSize="40sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNumPersonasGrupoDetalle"
                    android:text="12"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:src="@drawable/baseline_person_24"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tvDescripcionGrupoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvDeudaGrupoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deuda"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGastosGrupoDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</FrameLayout>