<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margen"
    tools:context=".fragments.ConfiguracionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margen"
            android:text="Título" />

        <EditText
            android:id="@+id/etTituloConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_et_titulo_gasto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margen"
            android:text="Descripción" />

        <EditText
            android:id="@+id/etDescripcionConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_et_descripcion" />

        <Button
            android:id="@+id/btnUpdateConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margen"
            android:text="@string/btn_actualizar_datos"
            app:icon="@drawable/baseline_edit_24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margen"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etAniadirPersonaConfig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/hint_et_participante"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnAniadirConfig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margen"
                android:text="@string/btn_aniadir_participante"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar grupo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margen"
            app:icon="@drawable/baseline_delete_24"/>
    </LinearLayout>

</FrameLayout>